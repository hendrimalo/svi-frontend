{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {
        "linebreak-style": "off",
        "no-unused-vars":"off",
        "no-underscore-dangle": "off",
        "consistent-return": "off",
        "no-use-before-define": "off",
        "camelcase": "off",
        "no-shadow": "off",
        "no-restricted-globals": "off",
        "no-console": "off",
        "import/order": "off",
        "import/no-dynamic-require": "off",
        "global-require": "off",
        "import/no-extraneous-dependencies": "off"
    }
}
